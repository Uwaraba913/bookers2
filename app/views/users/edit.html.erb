<% if @user.errors.any? %>
  <div class="error-message">
    <h3><%= @user.errors.count %>errors prohibited this obj from being saved</h3>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <label for="name">Name</label></br>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"name" %></br>
        <label for="userImage">Image</label></br>
        <%= f.attachment_field :profile_image, id:"userImage" %></br>
        <label for="Introduction">Introduction</label></br>
        <%= f.text_area :introduction, class:"form-control", id:"Introduction" %><br>
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>

