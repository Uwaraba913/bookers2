<h1>User info</h1>
<p><%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.png" %></p>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name%></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<p><%= link_to "edit", edit_user_path %></p>
<h1>Book</h1>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
<% @books.each do |book| %>
  <tboby>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.png" %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  </tboby>
  <% end %>
</table>