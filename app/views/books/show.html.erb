<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/lists', user: @user, book: @new_book %>
    </div>

    <div class="col-md-8 mx-auto">
      <h2>Book detail</h2>
      <table class="table">
        <tboby>
          <tr>
            <td><%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @book.user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.png" %>
              <% end %></br>
              <%= link_to @book.user.name, user_path(@user.id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
            <% end %>
          </tr>
        </tboby>
      </table>
    </div>
  </div>
</div>
